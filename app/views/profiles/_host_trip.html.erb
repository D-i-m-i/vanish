
<h1 class="mt-4"><strong>Your Bookings</strong></h1>
<div class="card-container">
  <h3>Pending Bookings</h3>
  <div class="cards-grid">
    <% @pending_bookings.each do |booking|  %>
      <div class="col">
        <div class="card-product">
          <%= cl_image_tag booking.van.photos.first.key, crop: :fill %>
          <div class="card-product-infos">
            <h3> <%= booking.van.name %></h3>
            <h4 class="d-inline-block text-truncate" style="max-width: 150px;"><%= booking.van.make_model_year %></h4>
            <%= link_to "Accept", accept_booking_path(booking), method: :patch, class: "btn btn-gradient space-top btn-full-width" %>
            <%= link_to "Reject", reject_booking_path(booking), method: :patch, class: "btn btn-ghost space-top my-2 btn-full-width" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="card-container">
  <h3>Past Bookings</h3>
  <div class="cards-grid">
    <% @past_bookings.each do |booking|  %>
      <div class="col">
        <div class="card-product">
          <%= cl_image_tag booking.van.photos.first.key, crop: :fill %>
          <div class="card-product-infos">
            <h3> <%= booking.van.name %></h3>
            <h4><%= booking.van.make_model_year %></h4>
            <a class="btn btn-gradient space-top" href="#">Info</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
