<div class="container">
<h1>Available Vans</h1>
<div class="cards">
<% @vans.each do |van| %>

  <div class="card-trip">
    <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
    <div class="card-trip-infos">
      <div>
      <h2><%= van.name %></h2>
      <p><%= van.make_model_year %></p>
      <p><%= van.overview %></p>
      </div>
      <p><strong>$<%= van.price %> / day</strong></p>
    </div>
  </div>
  <% end %>
</div>
</div>
