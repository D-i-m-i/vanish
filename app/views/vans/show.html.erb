<div class="container mt-4">
  <div class="row container-field">
    <div class="col-lg-6">
      <div class="row">
        <div class="col-lg-6">
          <h1><strong><%= @van.name %></strong></h1>
        </div>
        <div class="col-lg-6 mt-3 text-end">
          <p>hosted by: <%= @van.user.name %></h3>
        </div>
          <div class="container-field">
            <div class="row">
              <div class="col-lg-6">
                <p><%= @van.address %></p>
              </div>
              <div class="col-lg-6 text-end">
                <p>Add to bookmarks ‚ù§</p> <br>
              </div>
            </div>
          </div>
        <div class="container-field mt-2">
          <p class="mb-5"><strong><%= "Model: " %></strong><%= @van.make_model_year %></p>
          <p><strong><%= "Description: " %></strong><br><%= @van.overview %></p> <br>
        </div>
        <div class="row" style="padding-right: 0px !important;">
          <div class="col-lg-6">
            <p><strong><%= "Toilet:" %></strong><%= " No" %></p>
          </div>
          <div class="col-lg-6 text-end"  style="padding-right: 0px !important;">
            <p><strong><%= "Solar power:" %></strong><%= " Yes" %></p>
          </div>
          <div class="col-lg-6">
            <p><strong><%= "Kitchenette:" %></strong><%= " Yes" %></p>
          </div>
         <div class="container-field">
          <h5><strong>$<%= @van.price %></strong> /day</h5> <br>
         </div>
              <%= simple_form_for([ @van, @booking ]) do |f| %>
                <%= f.input :start_date, as: :date, html5: true, required: false %>
                <%= f.input :end_date, as: :date, html5: true, required: false %>
                <%= f.button :submit, class: "btn btn-flat mb-3" %>
              <% end #%>
          <%#= link_to "Request to book", "#", class: "btn btn-flat mb-3" %>
         </div>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="row">
        <% @van.photos.each do |photo| %>
        <div class="col-lg-5 m-4 rounded-img"><%= cl_image_tag photo.key, width: 600, crop: :fill, class: "rounded-5" %></div>
        <% end %>
      </div>
    </div>
  <h1>Pickup location</h1>
  <div style="width: 100%; height: 600px; border-radius: 12px; margin-bottom: 12px;"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
</div>
