<div class="container">
  <h1 class="mb-4 mt-3">Create a new van listing</h1>
  <div class="row">
    <div class="col-lg-6">

      <%= simple_form_for(@van) do |f| %>
        <%= f.input :name, :label => "Van name:" %>
        <%= f.input :overview, :label => "Description:" %>
        <%= f.input :address, :label => "Pickup Address" %>
        <%= f.input :make_model_year, :label => "Brand, model and year:" %>
        <%= f.input :kitchenette, as: :radio_buttons, :label => "Kitchenette:" %>
        <%= f.input :toilet, as: :radio_buttons, :label => "Toilet:" %>
        <%= f.input :solar_power, as: :radio_buttons, :label => "Solar power:" %>
        <%= f.input :price, :label => "Price per day ($):" %>

        <%= f.submit "Create van listing", class: "btn btn-flat" %>
        <action>

        <%# <%= link_to "Request to book", "#", class: "btn btn-flat" %>
        <%#= link_to "Add to bookmarks", "#", class: "btn btn-ghost" %>

      <% end %>
    </div>
    <div class="col-lg-6">
      <div class="row">
        <div class="col-lg-6"><%= image_tag "https://images.pexels.com/photos/3004666/pexels-photo-3004666.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1", class:"img-thumbnail mb-4", width:300, height:300 %></div>
        <div class="col-lg-6"><%= image_tag "https://images.pexels.com/photos/3004666/pexels-photo-3004666.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1", class:"img-thumbnail mb-4", width:300, height:300 %></div>
        <div class="col-lg-6"><%= image_tag "https://images.pexels.com/photos/3004666/pexels-photo-3004666.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1", class:"img-thumbnail mb-4", width:300, height:300 %></div>
        <div class="col-lg-6"><%= image_tag "https://images.pexels.com/photos/3004666/pexels-photo-3004666.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1", class:"img-thumbnail mb-4", width:300, height:300 %></div>
        <div class="col-lg-6"><%= link_to "Upload picture", vans_path, class: "btn btn-ghost" %></div>
        <div class="col-lg-6"></div>
      </div>
    </div>

  </div>
</div>
